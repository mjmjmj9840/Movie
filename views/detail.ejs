<%- include("partials/" + headerName); %>

<section class="content">
    <table>
        <td width="20%">
            <a href="#"
                ><img class="detail_img" src="<%=movie.imgURL%>.jpg" alt="<%=movie.title%>"
            /></a>
        </td>
        <td class="detail">
            <div class="detail_title"><%=movie.title%></div>
            <div class="detail_content">개봉일: <%=movie.date%></div>
            <div class="detail_content">장르: <%=movie.genre%></div>
            <div class="detail_content">감독: <%=movie.director%></div>
            <div class="detail_content">출연: <%=movie.cast%></div>
        </td>
        <td class="like">
            <% if(headerName == "header-login") { %> <% if(user_movies.includes(movie.title)) { %>
            <form action="/dislike" method="post">
                <button
                    class="detail_dislike"
                    name="dislike"
                    type="submit"
                    value="<%=movie.title%>"
                >
                    ★
                </button>
            </form>
            <% } else {%>
            <form action="/like" method="post">
                <button class="detail_like" name="like" type="submit" value="<%=movie.title%>">
                    ★
                </button>
            </form>
            <% } %> <% } else { %>
            <form action="/like" method="post">
                <button class="detail_like" name="like" type="submit" value="<%=movie.title%>">
                    ★
                </button>
            </form>
            <% } %>
        </td>
    </table>
</section>
<%- include("partials/footer"); %>
